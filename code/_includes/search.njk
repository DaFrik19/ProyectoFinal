{% set query = query | default('') %}

<h1>Resultados de b√∫squeda</h1>

{% if query %}
  <p>Mostrando resultados para: <strong>{{ query }}</strong></p>
  <ul>

    {% for post in collections.posts %}
      {% if post.data.title | lower contains query | lower %}
        <li>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
          <p>{{ post.templateContent | truncate(150) }}</p>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
{% else %}
  <p>No se ha especificado ninguna consulta.</p>
{% endif %}
